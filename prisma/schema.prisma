generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FavoriteLocation {
  id          String   @id @default(cuid())
  userId      String
  name        String
  latitude    Float
  longitude   Float
  country     String?
  state       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, latitude, longitude])
  @@index([userId])
}

model WeatherAlert {
  id          String   @id @default(cuid())
  userId      String
  location    String
  latitude    Float
  longitude   Float
  alertType   String
  message     String
  severity    String
  startTime   DateTime
  endTime     DateTime
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([userId, isRead])
}
